command /관리자명령어_메세지 [<text>]: 
	permission: op
	trigger:
		set {_text} to arg-1
		send "%{_text}%" to player

command /공지 [<text>]:
	permission: op
	trigger:
		set {_text} to arg-1
		broadcast ""
		broadcast "&c&l[전체 공지] &f%{_text}%"
		broadcast ""

command /기숙사공지 [<text>]:
	permission: op
	trigger:
		set {_text} to arg-1
		if player's name is "CT_Lia" or "Happy_Beaver":
			broadcast ""
			broadcast "&c&l[불기숙사 공지] &f%{_text}%"
			broadcast ""
		else if player's name is "__Zibsa__":
			broadcast ""
			broadcast "&b&l[물기숙사 공지] &f%{_text}%"
			broadcast ""
		else if player's name is "YangGang_H":
			broadcast ""
			broadcast "&a&l[자연기숙사 공지] &f%{_text}%"
			broadcast ""
		else if player's name is "Im_Yehan":
			broadcast ""
			broadcast "&e&l[바람기숙사 공지] &f%{_text}%"
			broadcast ""


command /관리자명령어_히든보스오픈:
	permission: op
	trigger:
		broadcast ""
		broadcast "&e&l[&e★&e&l] &a&l많은 낭만들의 응원&f으로 &d낭만 에너지&f가 모여 &c&l미지의 포탈&f이 생겼습니다."
		broadcast ""
		loop all players:
			play sound "block.end_portal.spawn" to loop-player

